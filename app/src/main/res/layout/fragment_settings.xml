<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="de.tum.mw.ftm.praktikum.smartinsightphd.SettingsFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/picture"
        android:background="@color/colorPrimary"
        android:layout_height="150dp">
           <ImageButton
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:id="@+id/btnUploadFoto"
               android:src="@drawable/ic_action_edit"
               android:layout_marginTop="4dp"
               android:background="@color/colorPrimary"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"/>
           <ImageView
               android:layout_centerHorizontal="true"
               android:layout_alignParentTop="true"
               android:id="@+id/profileImage"
               android:src="@drawable/profile"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               />
    </RelativeLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:layout_below="@id/picture"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Profil"
                    android:padding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_name"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Mustermann"
                    android:id="@+id/profileName"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:text="@string/prompt_email" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max.Mustermann@tum.de"
                    android:id="@+id/profileEmail"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Einstellungen"
                    android:padding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Push Nachrichten:"
                        android:textSize="16dp"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switchPush"
                        android:enabled="false"
                        android:checked="true"
                        android:layout_row="0"
                        android:layout_column="1" />

                </RelativeLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>

</FrameLayout>
