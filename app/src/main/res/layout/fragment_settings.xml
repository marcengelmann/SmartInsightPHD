<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    tools:context="de.tum.mw.ftm.praktikum.smartinsight.SettingsFragment">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Mustermann"
                android:id="@+id/profileName"
                android:textSize="18dp"
                android:enabled="false"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_email" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max.Mustermann@tum.de"
                android:id="@+id/profileEmail"
                android:textSize="18dp"
                android:enabled="false"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_matrikelnummber" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1245685"
                android:id="@+id/profilMatrikel"
                android:textSize="18dp"
                android:enabled="false"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klausureinsicht"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klausurname"
                android:id="@+id/profilExam"
                android:textSize="18dp"
                android:enabled="false"
                android:layout_marginBottom="8dp" />

            <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sitznummer:"
                android:layout_marginBottom="8dp"
                android:layout_row="0"
                android:layout_column="0"/>
            <Spinner
                android:id="@+id/profileSitzNumb"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_row="0"
                android:layout_column="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push Nachrichten:"
                    android:layout_marginBottom="8dp"
                    android:layout_row="1"
                    android:layout_column="0"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/switchPush"
                android:checked="true"
                android:layout_row="1"
                android:layout_column="1" />


        </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profilbild:"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Update"
                android:layout_marginTop="40dp"
                android:layout_marginRight="32dp"
                android:id="@+id/btnUploadFoto"
                android:layout_alignParentBottom="true"/>
            <de.tum.mw.ftm.praktikum.smartinsight.CircleImageView
                android:id="@+id/profileImage"
                android:src="@mipmap/ic_launcher_fernrohr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/borderCircleImage"
            />
            </LinearLayout>
        </LinearLayout>



</FrameLayout>
